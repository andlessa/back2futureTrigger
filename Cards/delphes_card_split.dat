#######################################
# Order of execution of various modules
#######################################

set ExecutionPath {

  LLPFilter
  OnTimeLLPFilter
  DelayedLLPFilter
  DMFilter
  DMMissingET
  JetFilter
  JetFilterOnTime
  JetFilterDelayed
  GenJetFinder
  GenJetFinderOnTime
  GenJetFinderDelayed
  ScalarHT
  
  TreeWriter
}

#####################
# LLP Filter
#####################

module BSMFilter LLPFilter {

  set InputArray Delphes/allParticles
  set OutputArray bsmParticles
  set MothersArray mothers
  set FinalDaughtersArray finalDaughters  
  set DirectDaughtersArray directDaughters
  set PTMin 0.0
  set massMin 0.0
  
  # Select chi1
  add PdgCode {4000023}
  add PdgCode {-4000023}
}

#####################
# OnTimeLLPFilter Filter
# Since the S decay is always chi1-chibar symmetric, we can use chi1 as the on-Time particle
#####################

module BSMFilter OnTimeLLPFilter {

  set InputArray Delphes/allParticles
  set OutputArray bsmParticles
  set MothersArray mothers
  set FinalDaughtersArray finalDaughters  
  set DirectDaughtersArray directDaughters
  set StableOthersArray stableOthers
  set PTMin 0.0
  set massMin 0.0
  
  # Select chi1
  add PdgCode {4000023}
}


#####################
# DelayedLLPFilter Filter
# Since we assume anti-chi1 to be delayed, all of its decays correspond to the delayed (N) event record
#####################

module BSMFilter DelayedLLPFilter {

  set InputArray Delphes/allParticles
  set OutputArray bsmParticles
  set MothersArray mothers
  set FinalDaughtersArray finalDaughters  
  set DirectDaughtersArray directDaughters
  set StableOthersArray stableOthers
  set PTMin 0.0
  set massMin 0.0
  
  # Select anti-chi1
  add PdgCode {-4000023}
}

#####################
# Jet Filter for all stable particles
#####################

module PdgCodeFilter JetFilter {

  set InputArray Delphes/stableParticles
  set OutputArray filteredParticles

  set PTMin 0.0
  # Exclude neutrinos
  add PdgCode {12}
  add PdgCode {14}
  add PdgCode {16}
  add PdgCode {-12}
  add PdgCode {-14}
  add PdgCode {-16}
  # Exclude muons
  # add PdgCode {13}
  # add PdgCode {-13}
  # Exclude neutralinos and sbottoms
  add PdgCode {4000022}
  add PdgCode {4000023}
  add PdgCode {-4000022}
  add PdgCode {-4000023}

}


#####################
# Jet Filter for particles OnTime (N-1 event record)
# (make use of all stable particles NOT coming from the delayed LLP)
#####################

module PdgCodeFilter JetFilterOnTime {

  set InputArray DelayedLLPFilter/stableOthers
  set OutputArray filteredParticles

  set PTMin 0.0
  # Exclude neutrinos
  add PdgCode {12}
  add PdgCode {14}
  add PdgCode {16}
  add PdgCode {-12}
  add PdgCode {-14}
  add PdgCode {-16}
  # Exclude muons
  # add PdgCode {13}
  # add PdgCode {-13}
  # Exclude neutralinos and sbottoms
  add PdgCode {4000022}
  add PdgCode {4000023}
  add PdgCode {-4000022}
  add PdgCode {-4000023}
}

#####################
# Jet Filter for particles Delayed (N event record)
# (make use of all stable particles coming from the delayed LLP)
#####################

module PdgCodeFilter JetFilterDelayed {

  set InputArray DelayedLLPFilter/finalDaughters
  set OutputArray filteredParticles

  set PTMin 0.0
  # Exclude neutrinos
  add PdgCode {12}
  add PdgCode {14}
  add PdgCode {16}
  add PdgCode {-12}
  add PdgCode {-14}
  add PdgCode {-16}
  # Exclude muons
  # add PdgCode {13}
  # add PdgCode {-13}
  # Exclude neutralinos and sbottoms
  add PdgCode {4000022}
  add PdgCode {4000023}
  add PdgCode {-4000022}
  add PdgCode {-4000023}
}

#####################
# Dark Matter Filter
#####################

module PdgCodeFilter DMFilter {

  set InputArray Delphes/allParticles
  set OutputArray dmParticles
  set Invert true
  set RequireStatus true
  set Status 1

  set PTMin 0.0

  add PdgCode {4000022}    
  add PdgCode {-4000022}
  add PdgCode {1000039}    
  add PdgCode {-1000039}
  
}


#####################
# MC truth jet finder - all particles
#####################

module FastJetFinder GenJetFinder {
  set InputArray JetFilter/filteredParticles

  set OutputArray jets

  # algorithm: 1 CDFJetClu, 2 MidPoint, 3 SIScone, 4 kt, 5 Cambridge/Aachen, 6 antikt
  set JetAlgorithm 6
  set ParameterR 0.6

  set JetPTMin 20.0
}

#####################
# MC truth jet finder - OnTime particles (N-1 event record)
#####################

module FastJetFinder GenJetFinderOnTime {
  set InputArray JetFilterOnTime/filteredParticles

  set OutputArray jets

  # algorithm: 1 CDFJetClu, 2 MidPoint, 3 SIScone, 4 kt, 5 Cambridge/Aachen, 6 antikt
  set JetAlgorithm 6
  set ParameterR 0.6

  set JetPTMin 20.0
}

#####################
# MC truth jet finder - Delayed particles (N event record)
#####################

module FastJetFinder GenJetFinderDelayed {
  set InputArray JetFilterDelayed/filteredParticles

  set OutputArray jets

  # algorithm: 1 CDFJetClu, 2 MidPoint, 3 SIScone, 4 kt, 5 Cambridge/Aachen, 6 antikt
  set JetAlgorithm 6
  set ParameterR 0.6

  set JetPTMin 20.0
}


##################
# Scalar HT merger
##################

module Merger ScalarHT {
# add InputArray InputArray
  add InputArray GenJetFinder/jets
  set EnergyOutputArray energy
}


###############################
# Dark Matter Missing ET merger
###############################

module Merger DMMissingET {
  add InputArray DMFilter/dmParticles
  set MomentumOutputArray momentum
}


##################
# ROOT tree writer
##################


module TreeWriter TreeWriter {
# add Branch InputArray BranchName BranchClass
#  add Branch Delphes/allParticles Particle GenParticle
#  add Branch Delphes/partons Parton GenParticle  
#  add Branch Delphes/stableParticles StableParticle GenParticle
  add Branch LLPFilter/bsmParticles llpParticles GenParticle
  add Branch LLPFilter/directDaughters llpDirectDaughters GenParticle
  add Branch LLPFilter/mothers llpMothers GenParticle

  add Branch OnTimeLLPFilter/bsmParticles llpParticlesOnTime GenParticle
  add Branch OnTimeLLPFilter/directDaughters llpDirectDaughtersOnTime GenParticle
#  add Branch OnTimeLLPFilter/mothers llpMothersOnTime GenParticle
#  add Branch OnTimeLLPFilter/finalDaughters llpFinalOnTime GenParticle  
#  add Branch OnTimeLLPFilter/stableOthers llpOthersOnTime GenParticle


  add Branch DelayedLLPFilter/bsmParticles llpParticlesDelayed GenParticle
  add Branch DelayedLLPFilter/directDaughters llpDirectDaughtersDelayed GenParticle  
#  add Branch DelayedLLPFilter/mothers llpMothersDelayed GenParticle
#  add Branch DelayedLLPFilter/finalDaughters llpFinalDelayed GenParticle  
#  add Branch DelayedLLPFilter/stableOthers llpOthersDelayed GenParticle

  add Branch DMFilter/dmParticles dmParticles GenParticle
  add Branch DMMissingET/momentum DMMissingET MissingET    
  add Branch GenJetFinder/jets GenJet Jet
  add Branch GenJetFinderOnTime/jets GenJetOnTime Jet  
  add Branch GenJetFinderDelayed/jets GenJetDelayed Jet
  add Branch ScalarHT/energy ScalarHT ScalarHT

}

